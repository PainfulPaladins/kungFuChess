<table id='playerstable' class='table'>
<tr class=''>
    <th>Belt</th>
    <th>Rating</th>
    <th>Player</th>
</tr>

<% foreach my $player (@{$players}){ %>
    <tr>
        <td>
             <div id="<%= $player->getBelt($ratingType) %>belt"></div>
        </td>
        <td>
            <%= $player->getRating($ratingType) %>
        </td>
        <td>
            <a href=/profile/<%= $player->{screenname} %>><%= $player->{screenname} %></a>
        </td>
    </tr>
<% } %>
</table>
